<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="removeStudentInfoChatIdIfExists" author="Kovaaf">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="step_passed" columnName="student_info_chat_id"/>
        </preConditions>
        <dropColumn columnName="student_info_chat_id" tableName="step_passed"/>
    </changeSet>

    <changeSet id="addStudentUserInfoFKColumnToMentor" author="Kovaaf">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="step_passed" columnName="student_info_chat_id"/>
            </not>
        </preConditions>
        <addColumn tableName="step_passed">
            <column name="student_info_chat_id" type="BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint constraintName="fk_step_passed_user_info"
                                 baseColumnNames="student_info_chat_id"
                                 baseTableName="step_passed"
                                 referencedColumnNames="chat_id"
                                 referencedTableName="user_info"/>
        <update tableName="step_passed">
            <column name="student_info_chat_id" valueComputed="(select ui.chat_id from user_info ui where UPPER(ui.user_name)=UPPER(step_passed.student_user_name))"/>
        </update>
    </changeSet>
</databaseChangeLog>