<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="removeUserInfoChatIdIfExists" author="Kovaaf">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="salary" columnName="user_info_chat_id"/>
        </preConditions>
        <dropColumn columnName="user_info_chat_id" tableName="salary"/>
    </changeSet>

    <changeSet id="removeTgIdIfExists" author="Kovaaf">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="salary" columnName="tg_user_id"/>
        </preConditions>
        <dropColumn columnName="tg_user_id" tableName="salary"/>
    </changeSet>

    <changeSet id="addUserInfoFKColumnToSalary" author="Kovaaf">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="salary" columnName="user_info_chat_id"/>
            </not>
        </preConditions>
        <addColumn tableName="salary">
            <column name="user_info_chat_id" type="BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint constraintName="fk_salary_user_info"
                                 baseColumnNames="user_info_chat_id"
                                 baseTableName="salary"
                                 referencedColumnNames="chat_id"
                                 referencedTableName="user_info"/>
        <update tableName="salary">
            <column name="user_info_chat_id" valueComputed="(select ui.chat_id from user_info ui where UPPER(ui.user_name)=UPPER(salary.user_name))"/>
        </update>
    </changeSet>
</databaseChangeLog>